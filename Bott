def store_select(update, context):
    choice = update.message.text

    if choice == "➕ Новый магазин":
        update.message.reply_text(
            "✏️ Введите название магазина:",
            reply_markup=ReplyKeyboardRemove()
        )
        return STORE_NAME

    # выбран существующий магазин
    context.user_data["store"] = choice   # ← важно: store, не store_name
    return finish(update, context)         # ← КЛЮЧЕВОЕ ИСПРАВЛЕНИЕ
