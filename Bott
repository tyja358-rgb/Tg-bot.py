def add_store_location(update: Update, context: CallbackContext):
    # Получаем адрес, который ввёл пользователь
    address = update.message.text
    store_name = context.user_data["store_name"]

    # Сохраняем магазин с адресом и пустым списком товаров
    stores[store_name] = {"coords": None, "address": address, "products": []}

    update.message.reply_text(
        f"Магазин '{store_name}' добавлен с адресом:\n{address}\n\n"
        "Теперь можно добавлять товары."
    )

    return -1  # Завершение ConversationHandler для этого шага
