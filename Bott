def main_menu_handler(update: Update, context: CallbackContext):
    """–û–±—Ä–∞–±–æ—Ç–∫–∞ –Ω–∞–∂–∞—Ç–∏–π –≥–ª–∞–≤–Ω–æ–≥–æ –º–µ–Ω—é"""
    text = update.message.text

    if text == "‚ûï –î–æ–±–∞–≤–∏—Ç—å —Å–∫–∏–¥–∫—É":
        # –°–±—Ä–∞—Å—ã–≤–∞–µ–º –¥–∞–Ω–Ω—ã–µ –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—è, —á—Ç–æ–±—ã —Å—Ü–µ–Ω–∞—Ä–∏–π —Å—Ç–∞—Ä—Ç–æ–≤–∞–ª —Å —á–∏—Å—Ç–æ–≥–æ –ª–∏—Å—Ç–∞
        context.user_data.clear()  
        # –ó–∞–ø—É—Å–∫–∞–µ–º —Å—Ü–µ–Ω–∞—Ä–∏–π –¥–æ–±–∞–≤–ª–µ–Ω–∏—è —Å–∫–∏–¥–∫–∏ –∏–∑ shops.py
        return start_discount(update, context)

    elif text == "üîç –ù–∞–π—Ç–∏ —Å–∫–∏–¥–∫—É":
        # –ó–∞–≥–ª—É—à–∫–∞ –¥–ª—è –ø–æ–∏—Å–∫–∞ —Å–∫–∏–¥–æ–∫
        update.message.reply_text(
            "üîç –í—ã –Ω–∞–∂–∞–ª–∏ '–ù–∞–π—Ç–∏ —Å–∫–∏–¥–∫—É'. –§—É–Ω–∫—Ü–∏–æ–Ω–∞–ª –ø–æ–∫–∞ –∑–∞–≥–ª—É—à–∫–∞.",
            reply_markup=ReplyKeyboardMarkup(
                MAIN_MENU, resize_keyboard=True, one_time_keyboard=True
            )
        )

    elif text == "üí∞ KWT / –ë–∞—Ä":
        # –ó–∞–≥–ª—É—à–∫–∞ –¥–ª—è KWT / –ë–∞—Ä
        update.message.reply_text(
            "üí∞ –í—ã –Ω–∞–∂–∞–ª–∏ 'KWT / –ë–∞—Ä'. –§—É–Ω–∫—Ü–∏–æ–Ω–∞–ª –ø–æ–∫–∞ –∑–∞–≥–ª—É—à–∫–∞.",
            reply_markup=ReplyKeyboardMarkup(
                MAIN_MENU, resize_keyboard=True, one_time_keyboard=True
            )
        )

    else:
        # –ï—Å–ª–∏ –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—å –Ω–∞–ø–∏—Å–∞–ª —á—Ç–æ-—Ç–æ –Ω–µ –∏–∑ –º–µ–Ω—é ‚Äî –≤–æ–∑–≤—Ä–∞—â–∞–µ–º –≥–ª–∞–≤–Ω–æ–µ –º–µ–Ω—é
        update.message.reply_text(
            "–í—ã–±–µ—Ä–∏—Ç–µ –¥–µ–π—Å—Ç–≤–∏–µ –∏–∑ –º–µ–Ω—é:",
            reply_markup=ReplyKeyboardMarkup(
                MAIN_MENU, resize_keyboard=True, one_time_keyboard=True
            )
        )
